.container
    .jumbotron
        h1 Home Page

    .panel.panel-default
        .panel-heading Change Setting
        .panel-body
            form#target(method='post', action='/bar')
                select.form-control#dataType(name='dataType')
                    option Database
                    option JSON
                hr
                select.form-control#dataSource(name='dataSource')
                    option Local MongoDb
                    option MLab
                hr
                input#comment(type="text", name='comment' value='foo')
                hr
                input.btn.btn-success(type="submit", value='Submit')

    .panel.panel-default
        .panel-heading Current Setting
        .panel-body
            .alert.alert-info
                pre#debug
